server {
    listen 80;
    server_name .local.dev.anjuke.com .<%= @subdomain %>.dev.anjuke.com;
    proxy_buffering off;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    location /{
        rewrite . /index.php last;
    }

    location /index.php {
        root /home/<%= @docuser %>/www/indexes/anjuke.php;
        internal;
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_param SCRIPT_FILENAME /home/<%= @docuser %>/www/indexes/anjuke.php;
        include fastcgi_params;
        expires epoch;
    }

    location /zufang {
        rewrite . /zufang/index.php last;
    }

    location /zufang/index.php {
        root /home/<%= @docuser %>/www/indexes/anjuke-zufang.php;
        internal;
        fastcgi_pass 127.0.0.1:9001;
        fastcgi_param SCRIPT_FILENAME /home/<%= @docuser %>/www/indexes/anjuke-zufang.php;
        include fastcgi_params;
        expires epoch;
    }

    location /jinpu {
        rewrite . /jinpu/index.php last;
    }

    location /jinpu/index.php {
        root /home/<%= @docuser %>/www/indexes/anjuke-jinpu.php;
        internal;
        fastcgi_pass 127.0.0.1:9002;
        fastcgi_param SCRIPT_FILENAME /home/<%= @docuser %>/www/indexes/anjuke-jinpu.php;
        include fastcgi_params;
        expires epoch;
    }

    location /v3 {
        rewrite . /v3/index.php last;
    }

    location /v3/index.php {
        root /home/<%= @docuser %>/www/indexes/anjuke-v3.php;
        internal;
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_param SCRIPT_FILENAME /home/<%= @docuser %>/www/indexes/anjuke-v3.php;
        include fastcgi_params;
        expires epoch;
    }
}

