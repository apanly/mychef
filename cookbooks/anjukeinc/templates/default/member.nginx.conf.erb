server {
    listen 80;
    server_name .member.local.dev.anjuke.com .member.<%= @subdomain %>.dev.anjuke.com;
    proxy_buffering off;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    root /home/<%= @docuser %>/www/indexes/member.php;

    location /{
        rewrite . /index.php last;
    }

    location /index.php {
        internal;
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_param SCRIPT_FILENAME /home/<%= @docuser %>/www/indexes/member.php;
        include fastcgi_params;
        expires epoch;
    }

    location /broker {
        rewrite . /broker/index.php last;
    }

    location /broker/index.php {
        internal;
        fastcgi_pass 127.0.0.1:9000;
    }
}

